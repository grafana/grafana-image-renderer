{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2021",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/*.ts",
    "src/config/config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
