{
  "service": {
    "host": "localhost",
    "port": 8081,

    "metrics": {
      "enabled": true,
      "collectDefaultMetrics": true,
      "collectTimingMetrics": true,
      "requestDurationBuckets": [1, 5, 7, 9, 11, 13, 15, 20, 30]
    },

    "logging": {
      "level": "debug",
      "console": {
        "json": false,
        "colorize": true
      }
    }
  },
  "rendering": {
    "chromeBin": null,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-accelerated-2d-canvas",
      "--disable-gpu",
      "--window-size=1920x1080"
    ],
    "ignoresHttpsErrors": false,

    "timezone": null,
    "acceptLanguage": null,
    "width": 1000,
    "height": 500,
    "deviceScaleFactor": 2,
    "maxWidth": 1980,
    "maxHeight": 8000,
    "maxDeviceScaleFactor": 10,

    "mode": "default",
    "clustering": {
      "mode": "browser",
      "maxConcurrency": 5
    },

    "verboseLogging": false,
    "dumpio": true
  }
}